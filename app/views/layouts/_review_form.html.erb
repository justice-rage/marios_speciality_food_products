<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
    <%= f.label :author %>
    <%= f.text_field :author %>
    <br>
    <%= f.label :rating %>
    <%= f.radio_button :rating, '1' %>
    <%= f.label :rating, '𝟭', value: '1' %>
    <%= f.radio_button :rating, '2' %>
    <%= f.label :rating, '𝟮', value: '2' %>
    <%= f.radio_button :rating, '3' %>
    <%= f.label :rating, '𝟯', value: '3' %>
    <%= f.radio_button :rating, '4' %>
    <%= f.label :rating, '𝟰', value: '4' %>
    <%= f.radio_button :rating, '5' %>
    <%= f.label :rating, '𝟱', value: '5' %>
    <br>
    <%= f.label :content_body %>
    <br>
    <%= f.text_area :content_body %>
    <p><%= f.submit %></p>
  <% end %>