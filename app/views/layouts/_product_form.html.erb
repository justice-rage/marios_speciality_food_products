<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
  <br>
  <br>
  <%= f.label :country_of_origin %>
  <%= f.select(:country_of_origin, Product::COUNTRY_LIST) %>
  <br>
  <br>
  <%= f.submit %>
<% end %>